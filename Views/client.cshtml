<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/Content/css/styles.css" media="screen" title="no title">
    <script src="/Content/js/jquery-3.1.1.js" charset="utf-8"></script>
    <script src="/Content/js/scripts.js" charset="utf-8"></script>
    <title>Barks</title>
</head>
<body>
    <div class="row">
        <h2>@Model["Stylist Object"].GetName()</h2>

        @if(Model["Client List"].Count == 0)
        {
            <h5>There are no clients listed with this stylist</h5>
        }
        else
        {
            <h4>Clients with this stylist:</h4>

            @foreach(var client in Model["Client List"])
            {
                <a href="/client/@client.GetId()"><h5>@client.GetName()</h5></div></a>
            }

        }
        <div class="delete_field">
            <form  action="/client/@Model["Client Object"].GetId()/delete" method="post">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" name="button">Delete Client</button>
            </form>
        </div>
    </div>
</body>
</html>
